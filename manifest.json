{
  "manifest_version": 3,
  "name": "Local Resume & Cover Letter Tailor",
  "version": "1.2.0",
  "description": "Paste a job post, adapt your resume bullets, and draft a targeted cover letter entirely on-device using Chrome's built-in AI.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Resume & Cover Letter Tailor",
    "default_icon": {
      "16": "icons/icon48.png",
      "32": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon48.png",
    "32": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
